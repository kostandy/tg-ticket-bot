{
  "name": "loop-tickets-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --test-scheduled --remote",
    "deploy": "npm run build && wrangler deploy",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "types": "wrangler types",
    "build": "tsc --project tsconfig.json",
    "scrape": "STORAGE_MODE=file tsc && node --env-file=.dev.vars --experimental-specifier-resolution=node dist/scraper.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250504.0",
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "wrangler": "^4.14.1"
  }
}
